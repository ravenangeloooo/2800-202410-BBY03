<%- include("templates/header") %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>
        body {
            background-color: hsl(0, 0%, 96%);
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-outline {
            position: relative;
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            color: #181616;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: none;
            background-color: #f2f4f6;
            color: rgb(18, 18, 18);
        }

        .form-control::placeholder {
            color: #141212;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #ccc;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 4px;
            background-color: #1BB9F5;
            color: white;
            font-size: 16px;
            cursor: pointer;
        }

        .login-link {
            text-align: center;
            margin-top: 10px;
        }

        .login-link a {
            color: #1BB9F5;
            text-decoration: none;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .container {
                padding: 0 10px;
            }
            
            .card-body {
                padding: 20px;
            }
            
            .form-outline {
                margin-bottom: 15px;
            }
            
            .form-control, .btn-primary {
                padding: 10px;
                font-size: 14px;
            }

            .toggle-password {
                right: 5px;
                font-size: 14px;
            }

            .login-link {
                font-size: 14px;
            }
        }

        @media (max-width: 480px) {
            .form-container {
                width: 100%;
                max-width: 90%;
                padding: 20px;
            }

            .card-body {
                padding: 15px;
            }

            .form-outline {
                margin-bottom: 10px;
            }

            .form-control, .btn-primary {
                padding: 8px;
                font-size: 12px;
            }

            .toggle-password {
                right: 2px;
                font-size: 12px;
            }

            .login-link {
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="container card-body p-5">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-3">Sign up</h2>

                                <form action='/signupSubmit' method='post'>
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <label class="form-label" for="form3Example1cg">Username</label>
                                        <input type='text' name='username' placeholder='username' id="form3Example1cg"
                                            class="form-control" required/>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <label class="form-label" for="form3Example1cg">Full Name</label>
                                        <input type='text' name='displayname' placeholder='display name' id="form3Example1cg"
                                            class="form-control" required/>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <label class="form-label" for="form3Example3cg">Email</label>
                                        <input type='email' name='email' placeholder='email' id="form3Example3cg"
                                            class="form-control" required/>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <label class="form-label" for="form3Example3cg">Date of Birth</label>
                                        <input type='date' name='date' placeholder='birthdate' id="form3Example3cg"
                                            class="form-control" required/>
                                    </div>

                                    <div class="form-outline mb-2">
                                        <label class="form-label" for="password" style="display: block;">Password</label>
                                        <div style="position: relative;">
                                            <input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
                                            <span class="toggle-password" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">üëÅÔ∏è</span>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-2">
                                        <label class="form-label" for="confirm-password" style="display: block;">Confirm Password</label>
                                        <div style="position: relative;">
                                            <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm Password" class="form-control" required>
                                            <span class="toggle-password" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">üëÅÔ∏è</span>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">SIGN UP</button>
                                    <div class="login-link">
                                        Already have an account? <a href="/login">Log in</a>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.querySelectorAll('.toggle-password').forEach(item => {
            item.addEventListener('click', function () {
                const input = this.previousElementSibling;
                const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                input.setAttribute('type', type);
                this.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
            });
        });
    </script>
</body>



