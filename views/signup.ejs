<%- include("templates/header") %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>

    /* Container styles */
.container.card-body.p-5 {
    padding: 5rem !important;
}

@media (max-width: 576px) {
    .container.card-body.p-5 {
        padding: 2rem !important;
    }
}

/* Card styles */
.card {
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Form header styles */
.card-body h2 {
    color: #333;
    font-weight: bold;
}

/* Form input styles */
.form-outline {
    position: relative;
    margin-bottom: 2rem;
}

.form-outline .form-label {
    position: absolute;
    top: -0.75rem;
    left: 1rem;
    background-color: #fff;
    padding: 0 0.5rem;
    color: #6c757d;
}

.form-control {
    padding: 1rem;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    box-shadow: none;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.form-control:focus {
    border-color: #80bdff;
    outline: 0;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

/* Password toggle icon styles */
.toggle-password {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    color: #6c757d;
}

.toggle-password:hover {
    color: #495057;
}

/* Button styles */
.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    padding: 0.75rem 1.25rem;
    font-size: 1rem;
    border-radius: 0.25rem;
    transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
}

/* Login link styles */
.login-link {
    margin-top: 1rem;
    text-align: center;
    color: #6c757d;
}

.login-link a {
    color: #007bff;
    text-decoration: none;
}

.login-link a:hover {
    text-decoration: underline;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .container.card-body.p-5 {
        padding: 0.5rem !important;
    }

    .form-control {
        padding: 0.75rem;
    }

    .btn-primary {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }

    .login-link {
        font-size: 0.875rem;
    }
}

@media (max-width: 576px) {
    .container.card-body.p-5 {
        padding: 0.5rem !important;
    }

    .form-control {
        padding: 0.5rem;
    }

    .btn-primary {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }

    .login-link {
        font-size: 0.75rem;
    }
}
</style>
    
</head>
<body>
    <br>
    <br>
    
    <div class="container card-body p-5">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-3">Sign up</h2>

                                <form action='/signupSubmit' method='post'>
                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input type='text' name='username' placeholder='Username' 
                                            class="form-control" required/>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input type='text' name='displayname' placeholder='Display Name' 
                                            class="form-control" required/>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <input type='email' name='email' placeholder='Email' 
                                            class="form-control" required/>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-2">
                                        <label class="form-label" for="form3Example3cg">Date of Birth</label>
                                        <input type='date' name='date' placeholder='birthdate' 
                                            class="form-control" required/>
                                    </div>

                                    <div class="form-outline mb-2">
                                        <div style="position: relative;">
                                            <input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
                                            <span class="toggle-password" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">üëÅÔ∏è</span>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-2">

                                        <div style="position: relative;">
                                            <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm Password" class="form-control" required>
                                            <span class="toggle-password" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">üëÅÔ∏è</span>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">SIGN UP</button>
                                    <div class="login-link">
                                        Already have an account? <a href="/login">Log in</a>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>


    <script>
        document.querySelectorAll('.toggle-password').forEach(item => {
            item.addEventListener('click', function () {
                const input = this.previousElementSibling;
                const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                input.setAttribute('type', type);
                this.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
            });
        });
    </script>
</body>



