<%- include("templates/header") %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<main class="mb-5">
    <section class="jumbotron text-left mt-3">
        <div class="row container m-0">
            <div class="col-auto p-1">
                <a href="/groups"><img src="/backarrow.png" alt="Back" width="30px"></a>
            </div>
            <div class="col-auto">
                <h1 class="jumbotron-heading">Discover</h1>
            </div>
            
            <p class="lead text-muted">Find a group for you</p>

            <div class="row mx-0 px-0">
                <div class="col-11 mx-0 px-0">
                    <!-- Search form -->
                    <form action="/discoverGroups/search" method="GET" class="mt-3 mb-3">
                    <input
                    type="search"
                    name="search"
                    class="form-control"
                    placeholder="Search..."
                    aria-label="Search"
                    />
                    <button type="submit" style="display: none;">Search</button>
                    </form>
                </div>
                <div class="col-1 mx-0 px-0 my-3 text-end">
                    <!-- Refresh button -->
                    <button class="btn" onclick="window.location.href='/discoverGroups';">
                    <i class="bi bi-arrow-clockwise"></i>
                    </button>
                </div>

            </div>

        </div>
    </section>
    <hr>
    <div class="album py-2 bg-light">
        <section class="jumbotron text-center mt-2 mb-3">
                <h1 class="jumbotron-heading">Suggested Groups</h1>
        </section>
        <div class="container">
            <div class="row">

                <% for(let i=0; i < groups.length; i++) { %>
                    <%- include('templates/groupPageCard', {groups: groups[i]}) %>
                        <% } %>
                
            </div>
        </div>
        </div>
</main>
<%- include("templates/footer") %>