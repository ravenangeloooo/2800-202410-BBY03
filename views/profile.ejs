<%- include("templates/header") %>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
      .profile-container {
          max-width: 600px;
          margin: 50px auto;
          padding: 30px;
          background: white;
          border-radius: 10px;
          box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      }
      .profile-img {
          border-radius: 50%;
          width: 150px;
          height: 150px;
      }
      .edit-btn {
          position: absolute;
          top: 10px;
          right: 10px;
      }
      .profile-info h4 {
          font-weight: bold;
          margin-bottom: 0.5rem;
      }
      .profile-info p {
          margin-bottom: 0;
          color: #6c757d;
      }
  </style>
</head>
<body>
  <div class="container profile-container position-relative">
      <div class="text-center mt-4">
          <h1>MY PROFILE</h1>
          <a href="/editProfile" class="btn btn-primary edit-btn">Edit Profile</a>
      </div>
      <div class="text-center my-4">
          <img src="<%= user.image_id ? 'https://res.cloudinary.com/deisln2yq/image/upload/c_scale,w_100,h_100/' + user.image_id : 'https://dummyimage.com/150x150/000/fff&text=Profile+pic' %>" class="profile-img" alt="Profile Picture">
      </div>
      <div class="mt-5">
          <h3>ABOUT ME</h3>
          <div class="list-group mt-3">
              <div class="list-group-item list-group-item-action d-flex gap-3 py-3 profile-info">
                  <div class="d-flex gap-2 w-100 justify-content-between">
                      <div>
                          <h4 class="mb-0">Name</h4>
                          <p class="mb-0"><%= user.displayname %></p>
                      </div>
                  </div>
              </div>
              <div class="list-group-item list-group-item-action d-flex gap-3 py-3 profile-info">
                  <div class="d-flex gap-2 w-100 justify-content-between">
                      <div>
                          <h4 class="mb-0">Email</h4>
                          <p class="mb-0"><%= user.email %></p>
                      </div>
                  </div>
              </div>
              <div class="list-group-item list-group-item-action d-flex gap-3 py-3 profile-info">
                  <div class="d-flex gap-2 w-100 justify-content-between">
                      <div>
                          <h4 class="mb-0">Date of Birth</h4>
                          <p class="mb-0"><%= user.birthdate %></p>
                      </div>
                  </div>
              </div>
              <div class="list-group-item list-group-item-action d-flex gap-3 py-3 profile-info">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h4 class="mb-0">Description</h4>
                        <p class="mb-0"><%= user.description %></p>
                    </div>
                </div>
            </div>
          </div>
      </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>


